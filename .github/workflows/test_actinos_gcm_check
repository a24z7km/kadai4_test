name: Test GCD Script

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  test:
    runs-on: ubuntu-latest

    steps:
    - name: チェックアウトリポジトリ
      uses: actions/checkout@v3

    - name: test_cal_gcm.sh の実行権限を付与
      run: chmod +x test_cal_gcm.sh

    - name: test_cal_gcm_check.sh の実行権限を付与
      run: chmod +x test_cal_gcm_check.sh

    - name: テストスクリプトを実行
      run: ./test_cal_gcm_check.sh
